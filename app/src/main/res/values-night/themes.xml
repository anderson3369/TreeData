<resources>
    <!-- Base application theme. -->
    <style name="Theme.TreeData.ChatGPT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_neutral30</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:drawableStart">@color/vectorNight</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TreeData.ChatGPT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="App.ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!--<item name="colorOnPrimary">@color/colorSecondary</item>-->
    </style>

    <style name="AgEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorSecondaryDark</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>-->
    </style>

    <style name="AgButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TreeData.ChatGPT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--<style name="Theme.TreeData.ChatGPT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->
</resources>