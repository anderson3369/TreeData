<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/select_a_farm"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/farmSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/site_id"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/farm_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/farmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_name_of_the_farm"
            android:importantForAutofill="no"
            style="@style/AgEditText"
            android:inputType="text"
            android:minWidth="48dp"
            android:minHeight="48dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/site_id"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/siteId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="1A"
            android:hint="@string/enter_the_site_id"
            android:inputType="text"
            style="@style/AgEditText"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <Button
                android:id="@+id/saveFarm"
                style="@style/AgButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/save_button_text"/>

            <Button
                android:id="@+id/newFarm"
                style="@style/AgButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/new_button_text" />

            <Button
                android:id="@+id/deleteFarm"
                style="@style/AgButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/delete_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">
            <ImageButton
                android:id="@+id/previousFarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:minWidth="64dp"
                android:minHeight="64dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/go_back"
                android:src="@drawable/baseline_arrow_back_48" />

            <ImageButton
                android:id="@+id/nextFarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/go_forward"
                android:src="@drawable/baseline_arrow_forward_48"/>
        </LinearLayout>
    </LinearLayout>
