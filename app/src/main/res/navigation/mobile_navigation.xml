<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.orchardmanager.treedata.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_farmer"
        android:name="com.orchardmanager.treedata.ui.farmer.FarmerFragment"
        android:label="Farmer"
        tools:layout="@layout/fragment_farmer" />

    <fragment
        android:id="@+id/nav_farm"
        android:name="com.orchardmanager.treedata.ui.farm.FarmFragment"
        android:label="Farm"
        tools:layout="@layout/fragment_farm"/>

    <fragment
        android:id="@+id/nav_orchard"
        android:name="com.orchardmanager.treedata.ui.orchard.OrchardFragment"
        android:label="Orchard"
        tools:layout="@layout/fragment_orchard"/>

    <fragment
        android:id="@+id/nav_tree"
        android:name="com.orchardmanager.treedata.ui.trees.TreeFragment"
        android:label="Tree"
        tools:layout="@layout/fragment_tree">
        <action
            android:id="@+id/action_nav_tree_to_nav_rootstock"
            app:destination="@id/nav_rootstock" />
        <action
            android:id="@+id/action_nav_tree_to_nav_variety"
            app:destination="@+id/nav_variety"/>
    </fragment>
    <fragment
        android:id="@+id/nav_rootstock"
        android:name="com.orchardmanager.treedata.ui.trees.RootstockFragment"
        android:label="Rootstock"
        tools:layout="@layout/fragment_rootstock"/>
    <fragment
        android:id="@+id/nav_variety"
        android:name="com.orchardmanager.treedata.ui.trees.VarietyFragment"
        android:label="Variety"
        tools:layout="@layout/fragment_variety"/>
    <fragment
        android:id="@+id/nav_irrigation"
        android:name="com.orchardmanager.treedata.ui.irrigation.IrrigationFragment"
        android:label="Irrigation"
        tools:layout="@layout/fragment_irrigation">
        <action
            android:id="@+id/action_nav_irrigation_to_nav_irrigationSystem"
            app:destination="@+id/nav_irrigationSystem"/>
    </fragment>
    <fragment
        android:id="@+id/nav_irrigationSystem"
        android:name="com.orchardmanager.treedata.ui.irrigation.IrrigationSystemFragment"
        android:label="Irrigation System"
        tools:layout="@layout/fragment_irrigation_system">
        <action
            android:id="@+id/actiion_nav_irrigationSystem_to_nav_pump"
            app:destination="@+id/nav_pump"/>
    </fragment>
    <fragment
        android:id="@+id/nav_pump"
        android:name="com.orchardmanager.treedata.ui.irrigation.PumpFragment"
        android:label="Pump"
        tools:layout="@layout/fragment_pump"/>

</navigation>