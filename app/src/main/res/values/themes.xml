<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TreeData.ChatGPT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:windowBackground">@drawable/agriculture_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:drawableLeft">@color/vectorDay</item>
        <!--
        <item name="android:editTextStyle">@style/AgricultureEditText</item>
        -->
    </style>

    <style name="Theme.TreeData.ChatGPT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OrchardListView" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="AgricultureEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_forest_24</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Theme.TreeData.ChatGPT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TreeData.ChatGPT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>