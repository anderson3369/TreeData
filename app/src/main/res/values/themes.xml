<resources>
    <!-- Base application theme. -->
    <style name="Theme.TreeData.ChatGPT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:drawableStart">@color/vectorDay</item>
    </style>

    <style name="Theme.TreeData.ChatGPT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="App.ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/vectorNight</item>
        <item name="colorOnPrimary">@color/vectorNight</item>
       <!-- <item name="colorOnPrimary">@color/colorPrimary</item> -->
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="AgEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/vectorNight</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AgButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/vectorNight</item>
    </style>

    <style name="Theme.TreeData.ChatGPT.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <!--<style name="Theme.TreeData.ChatGPT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>